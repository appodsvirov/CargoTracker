@inherits LayoutComponentBase

<header class="app-header">
    <div class="brand">
        <a href="/">CargoTracker.Web</a>
    </div>
    <nav class="app-tabs">
        <NavLink class="tab-link" href="" Match="NavLinkMatch.All">Home</NavLink>
        <NavLink class="tab-link" href="counter">Counter</NavLink>
        <NavLink class="tab-link" href="weather">Weather</NavLink>
    </nav>
</header>

<main class="app-main">
    <article class="content px-4">
        @Body
    </article>
</main>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
